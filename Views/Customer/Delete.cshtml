@model Customer



<form method="post" asp-action="Delete">
    <input asp-for="CustomerId" hidden />
    <div class="border p-3 mt-4">
        <div class=" = row pb-2">
            <h2 class="text-primary">Delete Customer</h2>
            <hr />
        </div>
        <div class=" mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" disabled class="form-control" />

        </div>
        <div class=" mb-3">
            <label asp-for="MiddleName"></label>
            <input asp-for="MiddleName" disabled class="form-control" />

        </div>
        <div class=" mb-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" disabled class="form-control" />

        </div>
        <div class=" mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" disabled class="form-control" />

        </div>
        <div class=" mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" disabled class="form-control" />

        </div>
        <div class=" mb-3">
            <label asp-for="LandMark"></label>
            <input asp-for="LandMark" disabled class="form-control" />

        </div>
        <div class=" mb-3">
            <label asp-for="State"></label>
            <input asp-for="State" disabled class="form-control" />

        </div>
        <div class=" mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" disabled class="form-control" />

        </div>
        <div class=" mb-3">
            <label asp-for="Mobile"></label>
            <input asp-for="Mobile" disabled class="form-control" />

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Customers" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To List</a>
    </div>
</form>
