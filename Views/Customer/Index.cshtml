@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class=" col-6">
            <h2 class="text-primary"> Customers List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i>&nbsp; Create New Customer</a>

        </div>
    </div>
    <br /> <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Middle Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    City
                </th>
                <th>
                    LandMark
                </th>
                <th>
                    State
                </th>
                <th>
                    Email
                </th>
                <th>
                    Mobile
                </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.FirstName
                    </td>
                    <td width="50%">
                        @obj.MiddleName
                    </td>
                    <td width="50%">
                        @obj.LastName
                    </td>
                    <td width="50%">
                        @obj.Address
                    </td>
                    <td width="50%">
                        @obj.City
                    </td>
                    <td width="50%">
                        @obj.LandMark
                    </td>
                    <td width="50%">
                        @obj.State
                    </td>
                    <td width="50%">
                        @obj.Email
                    </td>
                    <td width="50%">
                        @obj.Mobile
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group"></div>
                        <a asp-controller="Customer" asp-action="Edit" asp-route-CustomerID="@obj.CustomerId">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group"></div>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-CustomerID="@obj.CustomerId">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

