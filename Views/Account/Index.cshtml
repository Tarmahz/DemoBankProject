@model IEnumerable<Account>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class=" col-6">
            <h2 class="text-primary"> Accounts</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Account" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i>&nbsp; Create Account</a>

        </div>
    </div>
    <br /> <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Account Number
                </th>
                <th>
                    Account Name
                </th>
                <th>
                    Account Type
                </th>
                <th>
                    Account Balance
                </th>
                <th>
                    Date Created
                </th>
                <th>
                    Last Date Updated
                </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.AccountNumber
                    </td>
                    <td width="50%">
                        @obj.AccountName
                    </td>
                    <td width="50%">
                        @obj.AccountType
                    </td>
                    <td width="50%">
                        @obj.CurrentAccountBalance
                    </td>
                    <td width="50%">
                        @obj.DateCreated
                    </td>
                    <td width="50%">
                        @obj.DateLastUpdated
                    </td>
                    
                    <td>
                        <div class="w-75 btn-group" role="group"></div>
                        <a asp-controller="Account" asp-action="Edit" asp-route-AccountNumber="@obj.AccountNumber">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group"></div>
                        <a asp-controller="Account" asp-action="Delete" asp-route-AccountNumber="@obj.AccountNumber">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

